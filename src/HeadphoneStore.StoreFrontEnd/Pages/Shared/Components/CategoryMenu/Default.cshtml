@using HeadphoneStore.Shared.Dtos.Category
@model List<CategoryDto>

<link href="@Url.Content("~/css/components/category-menu.css")" rel="stylesheet" type="text/css"
      asp-append-version="true"/>

<div class="category-header-wrapper">
    <div class="category-header-container">
        <ul class="category-list-wrapper">
            @foreach (var category in Model)
            {
                if (category.SubCategories!.Count() == 0)
                    continue;

                <li class="category-menu-btn category-dropdown-menu">
                    <a href="@Url.Page("/Products/Index", new { categorySlug = category.Slug })" class="category-menu-item">
                        <span class="category-item-title">@category.Name</span>

                        <svg aria-hidden="true" focusable="false" role="presentation" viewBox="0 0 24 24"
                        class="icon-caret">
                            <path fill="currentColor"
                            d="M17,9.17a1,1,0,0,0-1.41,0L12,12.71,8.46,9.17a1,1,0,0,0-1.41,0,1,1,0,0,0,0,1.42l4.24,4.24a1,1,0,0,0,1.42,0L17,10.59A1,1,0,0,0,17,9.17Z"></path>
                        </svg>
                    </a>

                    <div class="dropdown-submenu">
                        @foreach (var subCategory in category.SubCategories!)
                        {
                            <a href="@Url.Page("/Products/Index", new { categorySlug = subCategory.Slug })" class="box-item">
                                @subCategory.Name
                            </a>
                        }
                    </div>
                </li>
            }
        </ul>
    </div>
</div>
